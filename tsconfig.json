{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "outDir": "public",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "inlineSources": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "public"]
}

